@model blueGrassDigital.Models.RteBlockModel

<div class="rte-block bg-light p-5 rounded text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="rte-content">
                    @if (Model.Content != null)
                    {
                        @Html.Raw(Model.Content)
                    }
                    else
                    {
                        <p class="text-muted text-center">Content is empty.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>