@model blueGrassDigital.Models.HeroBlockModel

<div class="hero-block bg-light p-5 rounded text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2>@Model.Title</h2>
                <p class="lead">@Model.Description</p>
                @if (Model.Image != null)
                {
                    <img src="@Model.Image.MediaUrl()" alt="@Model.Title" class="img-fluid rounded mb-4" />
                }
            </div>
        </div>
    </div>
</div>